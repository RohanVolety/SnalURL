<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Font  -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Kulim+Park&display=swap" rel="stylesheet">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">

  <title> Dashboard | SnapURL</title>
  <style>
    body {
      font-family: 'Kulim Park', sans-serif;
      font-size: larger;
      background-color: #f8f9fa;
    }

    .bi {
      color: #0003FF;
    }

    .customborder {
      border-radius: 2%;
      border: 2px solid #E95420;
    }

    .card {
      border: none;
      border-radius: 25px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-primary {
      color: #E95420;
      border-color: #E95420;
    }

    .btn-outline-primary:hover {
      background-color: #E95420;
      color: #fff;
    }

    .list-group-item {
      border: none;
      border-radius: 15px;
      background-color: #fff;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .list-group-item a {
      text-decoration: none;
      color: #000;
    }

    .list-group-item a:hover {
      text-decoration: underline;
    }

    .table th,
    .table td {
      vertical-align: middle;
    }
  </style>
</head>

<body>

  <!-- navbar  -->
  <nav class="navbar navbar-expand-lg navbar-light p-4">
    <div class="container">
      <a class="navbar-brand" href="#">
        SnapURL
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
          </li>
          <% if(logged){ %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% }else{ %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <% } %>

        </ul>
      </div>
    </div>
  </nav>
  <!-- navbar end  -->
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 col-lg-6 p-5 mx-auto bg-light customborder rounded">
        <% if(typeof err !='undefined' ){ %>
        <% if(err){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>ERROR </strong>
          <%= err %>.
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
        <% } %>
        <form action="/create" , method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <div class="mb-3">
            <label for="url" class="form-label">Enter Long Url</label>
            <input type="url" class="form-control form-control-lg" name="original" id="url" autocomplete="off" placeholder="Original Long URL" />
          </div>
          <div class="mb-3">
            <label for="short" class="form-label">Your Short slug</label>
            <input type="text" class="form-control form-control-lg" name="short" id="short" autocomplete="off" placeholder="short" />
          </div>
          <div class="d-grid gap-3 mb-3">
            <input type="submit" class="btn btn-lg btn-block btn-outline-primary" value="Create Url" />
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- / -->
  <div class="container p-5">
    <h2 class="text-center">Your Urls and Performance</h2>
    <div class="row justify-content-center">
      <div class="col-12 col-md-10">
        <% if(typeof urls !='undefined' ){ %>
        <% if(urls.length !=0){ %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Short Slug</th>
                <th>Short URL</th>
                <th>Clicks</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.slug %></td>
                <td><a href="https://snapurl-xgg4.onrender.com/<%= url.slug %>">https://snapurl-xgg4.onrender.com/<%= url.slug %></a></td>
                <td><%= url.visits %></td>
                <td>
                  <form action="/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <input type="hidden" name="slug" value="<%= url.slug %>" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <h2 class="text-center">No Urls created By You ðŸ˜”ðŸ˜”</h2>
        <% } %>
        <% } %>
      </div>
    </div>
  </div>
  <!-- / -->

  <!-- Footer -->
  <%- include('./partials/footer.ejs'); %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

</body>

</html>
